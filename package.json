{
  "name": "electron_sandbox",
  "version": "1.0.0",
  "description": "lets learn electron",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev": "nodemon --ext js,css,html --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.scm.sandbox",
    "productName": "Electron Sandbox",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      {
        "from": ".env",
        "to": "."
      }
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": "."
      }
    ]
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "electron-context-menu": "^4.1.1",
    "pg": "^8.16.3"
  }
}
